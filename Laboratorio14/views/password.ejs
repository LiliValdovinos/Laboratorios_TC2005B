<%- include('includes/head.ejs') %>
<%- include('includes/navbar.ejs') %>

<div class="container">
    <h2 class="center-align">Validar Contraseña</h2>

    <% if (username) { %>
        <p class="center-align">Bienvenido, <strong><%= username %></strong></p>
        <form action="/password/logout" method="POST">
            <button type="submit" class="btn red">Cerrar sesión</button>
        </form>
    <% } else { %>
        <form action="/password/login" method="POST">
            <div class="input-field">
                <input type="text" name="username" id="username" required autocomplete="off">
                <label for="username">Nombre de usuario</label>
            </div>
            <button type="submit" class="btn waves-effect waves-light">Iniciar sesión</button>
        </form>
    <% } %>
</div>

<script src="/js/validation.js"></script>

